          form(action='/newLoan')
            label(for='cname') Customer Name:
            input#cname(type='text' name='cname')
            br
            br
            label(for='pnumber') Phone Number:
            input#pnumber(type='text' pnumber='pnumber')
            br
            br
            label(for='address') Address:
            input#address(type='address' name='address')
            br
            br
            label(for='loanamount') Loan Amount:
            input#loanamount(type='loanamount' name='loanamount')
            br
            br
            label(for='interest') Interest:
            input#interest(type='interest' name='interest')
            br
            br
            label(for='loantermyears') Loan Term Years:
            input#loantermyears(type='loantermyears' name='loantermyears')
            br
            br
            label(for='loantype') Loan Type:
            input#loantype(type='loantype' name='loantype')
            br
            br
            label(for='loantype') Description:
            input#description(type='description' name='description')
            br
            br
            input.card__sub-heading(type='submit' value='Submit')
